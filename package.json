{
  "name": "beats-playlist",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun --watch ./server/server.ts\" \"bun run dev:client\"",
    "dev:prodApi": "bun run createColors && USE_PROD_API=true vite",
    "dev:client": "bun run createColors && vite",
    "build": "bun run createColors && tsc -b && vite build",
    "tsc:check": "bun run tsc --noEmit -p ./tsconfig.app.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "createColors": "bun run createTailwindColors.ts 2> /dev/null",
    "buildDocker": "docker build -t qodesmith/beats-playlist:1.0.0 --platform=linux/amd64 .",
    "pushDocker": "docker push qodesmith/beats-playlist:1.0.0",
    "deploy": "bun run build && bun run buildDocker && bun run pushDocker",
    "deployServerOnly": "bun run buildDocker && bun run pushDocker",
    "db:generate": "bunx drizzle-kit generate --config=./server/sqlite/drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config=./server/sqlite/drizzle.config.ts",
    "db:both": "bun run db:generate && bun run db:migrate",
    "db:seed": "bun server/sqlite/seed.ts",
    "db:init": "bun run db:both && bun run db:seed"
  },
  "dependencies": {
    "@googleapis/youtube": "^20.0.0",
    "@libsql/client": "^0.14.0",
    "@qodestack/dl-yt-playlist": "^8.1.1",
    "@qodestack/utils": "^2.8.0",
    "compressible": "^2.0.18",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.2",
    "hono": "^4.6.13",
    "valibot": "^0.36.0"
  },
  "devDependencies": {
    "@qodestack/prettier-config": "^1.0.2",
    "@types/bun": "^1.1.14",
    "@types/compressible": "^2.0.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jotai": "^2.10.3",
    "motion": "^11.14.4",
    "open": "^10.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-mkcert": "^1.17.6"
  }
}
