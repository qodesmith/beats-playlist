{
  "name": "beats-playlist",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun --watch ./server/server.ts\" \"bun run dev:client\"",
    "dev:prodApi": "bun run createColors && USE_PROD_API=true vite",
    "dev:client": "bun run createColors && vite",
    "build": "bun run createColors && tsc -b && vite build",
    "tsc:check": "bun run tsc --noEmit -p ./tsconfig.app.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "createColors": "bun run createTailwindColors.ts 2> /dev/null",
    "buildDocker": "docker build -t qodesmith/beats-playlist:1.0.0 --platform=linux/amd64 .",
    "pushDocker": "docker push qodesmith/beats-playlist:1.0.0",
    "deploy": "bun run build && bun run buildDocker && bun run pushDocker",
    "deployServerOnly": "bun run buildDocker && bun run pushDocker"
  },
  "dependencies": {
    "@googleapis/youtube": "^20.0.0",
    "compressible": "^2.0.18",
    "dotenv": "^16.4.5",
    "hono": "^4.6.5",
    "mongodb": "^6.9.0"
  },
  "devDependencies": {
    "@qodestack/dl-yt-playlist": "^7.4.0 ",
    "@qodestack/prettier-config": "^1.0.2",
    "@qodestack/utils": "^2.6.2",
    "@types/bun": "^1.1.11",
    "@types/compressible": "^2.0.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "framer-motion": "^11.11.9",
    "jotai": "^2.10.1",
    "open": "^10.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.9"
  }
}
