{
  "name": "beats-playlist",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "bunApp/server/server.tsx",
  "module": "bunApp/server/server.tsx",
  "scripts": {
    "dev": "bun --hot bunApp/server/server.tsx",
    "dev:old": "concurrently \"bun --watch ./server/server.ts\" \"bun run dev:client\"",
    "dev:prodApi": "bun run createColors && USE_PROD_API=true vite",
    "dev:client": "vite",
    "build": "bun run createColors && tsc -b && vite build",
    "tsc:check": "bun run tsc --noEmit -p ./tsconfig.app.json",
    "lint": "biome lint",
    "preview": "vite preview",
    "createColors": "bun run createTailwindColors.ts 2> /dev/null",
    "buildDocker": "docker build -t qodesmith/beats-playlist:1.0.0 --platform=linux/amd64 .",
    "pushDocker": "docker push qodesmith/beats-playlist:1.0.0",
    "deploy": "bun run build && bun run buildDocker && bun run pushDocker",
    "deployServerOnly": "bun run buildDocker && bun run pushDocker",
    "db:generate": "bunx drizzle-kit generate --config=./server/sqlite/drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config=./server/sqlite/drizzle.config.ts",
    "db:both": "bun run db:generate && bun run db:migrate",
    "db:seed": "bun server/sqlite/seed.ts",
    "db:init": "bun run db:both && bun run db:seed",
    "db:view": "bunx drizzle-kit studio --config=./server/sqlite/drizzle.config.ts",
    "check": "biome check",
    "check:fix": "biome check --write .",
    "lint:fix": "biome lint --write .",
    "format": "biome format",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@googleapis/youtube": "^25.0.0",
    "@libsql/client": "^0.15.4",
    "@qodestack/dl-yt-playlist": "^8.1.1",
    "@qodestack/utils": "^2.20.0",
    "bun-plugin-tailwind": "^0.0.15",
    "compressible": "^2.0.18",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.8",
    "valibot": "^0.36.0"
  },
  "devDependencies": {
    "@qodestack/biome-config": "^1.5.1",
    "@tailwindcss/postcss": "^4.1.5",
    "@tanstack/react-virtual": "^3.13.6",
    "@types/bun": "^1.2.11",
    "@types/compressible": "^2.0.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "jotai": "^2.12.3",
    "motion": "^12.9.4",
    "open": "^10.1.2",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-plugin-mkcert": "^1.17.8"
  }
}
